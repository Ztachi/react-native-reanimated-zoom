{
  "name": "react-native-reanimated-zoom",
  "version": "1.0.0",
  "private": false,
  "description": "A performant, gesture-based zoomable image preview component for React Native, powered by Reanimated v3 and Gesture Handler v2.",
  "repository": {
    "type": "git",
    "url": "https://github.com/strawberrybear/react-native-reanimated-zoom.git"
  },
  "bugs": {
    "url": "https://github.com/strawberrybear/react-native-reanimated-zoom/issues"
  },
  "homepage": "https://github.com/strawberrybear/react-native-reanimated-zoom#readme",
  "author": "ztachi <legendryztachi@gmail.com>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./src/index.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "build": "vite build",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build",
    "test": "echo \"No tests yet\"",
    "clean": "rimraf dist",
    "release": "release-it"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.73.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=3.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.5",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.3.2",
    "@types/react": "~19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "release-it": "^19.2.4",
    "rimraf": "^6.1.3",
    "tslib": "^2.8.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "keywords": [
    "react-native",
    "image",
    "preview",
    "zoom",
    "pan",
    "reanimated",
    "gesture-handler"
  ],
  "license": "MIT"
}
